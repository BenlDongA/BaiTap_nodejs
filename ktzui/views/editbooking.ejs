<%- include('layouts/header.ejs'); %>

<main>
    <div class="container mt-5">
        <h3>Sửa Thông Tin Đặt Chỗ</h3>
        <form action="/bookings/update/<%= booking._id %>" method="POST">
            <div class="mb-3">
                <label for="customerName" class="form-label">Tên khách hàng</label>
                <input type="text" class="form-control" id="customerName" name="customerName" value="<%= booking.customerName %>" required>
            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Ngày</label>
                <input type="date" class="form-control" id="date" name="date" value="<%= new Date(booking.date).toISOString().split('T')[0] %>" required>
            </div>
            <div class="mb-3">
                <label for="time" class="form-label">Giờ</label>
                <input type="time" class="form-control" id="time" name="time" value="<%= booking.time %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>
</main>

<%- include('layouts/footer.ejs'); %>
